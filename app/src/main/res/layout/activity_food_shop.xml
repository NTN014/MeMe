<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FoodShopActivity">

    <EditText
        android:id="@+id/etxt1"
        android:hint="Enter your in4"
        android:textSize="26sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"/>
    <Button
        android:id="@+id/btnPushData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etxt1"
        android:text="Push data"
        android:textSize="26sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/txtGetData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:layout_below="@+id/btnPushData"
        android:layout_marginTop="15dp"/>
    <Button
        android:id="@+id/btnGetData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Data"
        android:layout_below="@+id/txtGetData"
        android:textSize="26sp"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/imgPush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGetData"
        android:src="@drawable/ic_play"
        android:layout_marginTop="50dp"/>
    <Button
        android:id="@+id/btnPushImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgPush"
        android:layout_below="@+id/btnGetData"
        android:layout_marginTop="75dp"
        android:text="Push Image"
        android:textSize="20sp"/>
    <ImageView
        android:id="@+id/imgGet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgPush"
        android:src="@drawable/ic_tiger"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <Button
        android:id="@+id/btnGetImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgGet"
        android:layout_below="@+id/imgGet"
        android:layout_marginTop="50dp"
        android:text="Get Image"
        android:textSize="25sp"/>
</RelativeLayout>