<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgFood"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:src="@mipmap/ic_launcher" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtFoodName"
        android:layout_toRightOf="@+id/imgFood"
        android:text="Bun Cha"
        android:textSize="24sp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPriceFood"
        android:text="25000vnd"
        android:layout_toRightOf="@+id/txtFoodName"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDescriptionFood"
        android:text="Mon an ngon cua moi gia dinh Viet"
        android:layout_toRightOf="@+id/imgFood"
        android:layout_below="@+id/txtFoodName"
        android:layout_marginTop="8dp"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtQuantityFood"
        android:text="so luong: 50"
        android:layout_below="@+id/txtDescriptionFood"
        android:layout_toRightOf="@+id/imgFood"
        android:layout_marginTop="10dp"
        android:textSize="15sp"/>

</RelativeLayout>